{
  "name": "@i18n-tiny/astro",
  "version": "1.0.0",
  "type": "module",
  "description": "Tiny, type-safe i18n library for Astro with automatic type inference and zero dependencies",
  "keywords": [
    "astro",
    "i18n",
    "internationalization",
    "typescript",
    "ssg",
    "ssr"
  ],
  "author": "unlibra",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unlibra/i18n-tiny.git",
    "directory": "packages/astro"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "import": "./dist/middleware.js",
      "require": "./dist/middleware.cjs"
    },
    "./router": {
      "types": "./dist/router.d.ts",
      "import": "./dist/router.js",
      "require": "./dist/router.cjs"
    },
    "./router/*": "./src/router/*",
    "./locals": {
      "types": "./src/locals.d.ts"
    }
  },
  "files": [
    "dist",
    "src/router",
    "src/locals.d.ts"
  ],
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@i18n-tiny/core": "workspace:*"
  },
  "peerDependencies": {
    "astro": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "astro": "^5.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
